if has("autocmd")
    augroup COMMENTING
        autocmd!
        autocmd FileType css nnoremap <leader>c 0i/*<esc>A*/<esc>
        autocmd FileType css nnoremap <leader>C 02x$xx

        autocmd FileType html nnoremap <leader>c 0i<!--<esc>A--><esc>
        autocmd FileType html nnoremap <leader>C 04x$xxx
        "autocmd FileType html vnoremap <leader>c :s_^_<!--_g|s_$_-->_g<cr>:noh<cr>
        "autocmd FileType html vnoremap <leader>C :s_^<!--__g|s_-->$__g<cr>:noh<cr>

        autocmd FileType vim nnoremap <leader>c 0i"<esc>
        autocmd FileType vim nnoremap <leader>C 0x<cr>
        autocmd FileType vim vnoremap <leader>c :s_^_"_g<cr>:noh<cr>
        autocmd FileType vim vnoremap <leader>C :s_^"__g<cr>:noh<cr>

        " Comment/uncomment out and clear search highlighting for visual blocks.
        autocmd FileType haskell nnoremap <leader>c 0i--<esc>
        autocmd FileType haskell nnoremap <leader>C 02x
        autocmd FileType haskell vnoremap <leader>c :s_^_--_g<cr>:noh<cr>
        autocmd FileType haskell vnoremap <leader>C :s_^--__g<cr>:noh<cr>

        autocmd FileType c,go,javascript,typescript nnoremap <leader>c 0i// <esc>
        autocmd FileType c,go,javascript,typescript nnoremap <leader>C 03x
"        autocmd FileType javascript,go vnoremap <leader>c :s_^_//_g<cr>:noh<cr>
        autocmd FileType c,javascript,typescript vnoremap <leader>c :s_^_// _g<cr>:noh<cr>
"        autocmd FileType javascript,go vnoremap <leader>C :s_^// __g<cr>:noh<cr>
        autocmd FileType c,javascript,typescript vnoremap <leader>C :s_^// __g<cr>:noh<cr>

        autocmd FileType coffee,gitconfig,php,python,sh nnoremap <leader>c 0i#<esc>
        autocmd FileType coffee,gitconfig,php,python,sh nnoremap <leader>C 0x<cr>
        autocmd FileType coffee,gitconfig,php,python,sh vnoremap <leader>c :s_^_#_g<cr>:noh<cr>
        autocmd FileType coffee,gitconfig,php,python,sh vnoremap <leader>C :s_^#__g<cr>:noh<cr>

        " Comment out the block, c-style.
        " From top/down (Start with your cursor anywhere on the first line)...
        autocmd FileType c,go,html,javascript,php,typescript nnoremap <leader>b O/*<esc>jf{%o*/<esc>
        " ...and from bottom/up (cursor must be on the closing bracket).
        autocmd FileType c,go,html,javascript,php,typescript nnoremap <leader>B o*/<esc>k%O/*<esc>
        " Uncomment out the block, c-style.
        " From top/down (Start with your cursor anywhere on the first line)...
        autocmd FileType c,go,html,javascript,php,typescript nnoremap <leader>ub kddf{%jdd<cr>
        " ...and from bottom/up (cursor must be on the closing bracket).
        autocmd FileType c,go,html,javascript,php,typescript nnoremap <leader>uB jddk%kdd<cr>
    augroup END
endif

