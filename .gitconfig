# https://git.wiki.kernel.org/index.php/Aliases#Advanced_aliases_with_arguments
# https://stackoverflow.com/questions/26243145/git-aliases-operate-in-the-wrong-directory
# https://osdir.com/ml/git/2009-01/msg00298.html
[user]
	name = Benjamin Toll
	email = benjam72@yahoo.com
[alias]
	br = branch
	ci = commit
	co = checkout
	st = status
	dirty = ls --dirty -e
	get-hash = rev-parse
	goto = !sh -c 'git rev-parse $0 | xargs git co'
	last = log -1 HEAD
	unmodify = checkout --
	unstage = reset HEAD --
[core]
	editor = /usr/bin/vim
[github]
	user = benjam72@yahoo.com
[diff]
	tool = vimdiff
[difftool]
	prompt = false
[pull]
	rebase = true
[merge]
	conflictstyle = diff3
	renamelimit = 9220
[hooks "pre-commit"]
        hook = EOF.sh
        hook = debugger.sh
        hook = eslint.sh

