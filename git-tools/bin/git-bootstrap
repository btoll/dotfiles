#!/bin/bash

# Will copy every file in $HOME/dotfiles/bootstrap into either the cwd
# or, if given, the location pointed to be `--dir`.
# Files copied will be `LICENSE`, `README.md`, et al.
#
# Also, will update the project name in README.md to $(basename $PROJECT_DIR)."

set -eo pipefail

PROJECT_DIR=

usage() {
    echo "git-bootstrap"
    echo
    echo "Usage: $0 [args]"
    echo
    echo "Args:"
    echo "--dir, -d   The git directory into which the files will be copied."
    echo "--help      Help."
    echo
    echo "Truthfully, this doesn't use any \`git\` commands.  Oh well."
}

if [ "$#" -gt 0 ]; then
    while [ "$#" -gt 0 ]; do
        OPT="$1"
        case "$OPT" in
            --dir|-d) shift; PROJECT_DIR="$1" ;;
            --help) usage; exit 0 ;;
            *) echo "$(tput setaf 1)[ERROR]$(tput sgr0) Unknown option."; usage; exit 1 ;;
        esac
        shift
    done
fi

if [ -z "$PROJECT_DIR" ]
then
    PROJECT_DIR=$(pwd)
fi

for file in "$HOME/dotfiles/bootstrap/"*
do
    cp -i "$file" "$PROJECT_DIR"
    if [[ "$file" =~ README ]]
    then
        sed -i 's/PROJECT_NAME/'"$(basename "$PROJECT_DIR")"'/' "$PROJECT_DIR/$(basename "$file")"
    fi
done

echo "$(tput setaf 2)[INFO]$(tput sgr0) Installed bootstrap files into $PROJECT_DIR."

