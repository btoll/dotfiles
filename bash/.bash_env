# Don't put duplicate lines in the history. See bash(1) for more options.
# Don't overwrite GNU Midnight Commander's setting of `ignorespace'.
export HISTCONTROL=$HISTCONTROL${HISTCONTROL+,}ignoredups
# ... or force ignoredups and ignorespace
export HISTCONTROL=ignoreboth

export HISTSIZE=500000
export HISTFILESIZE=100000

# Let's ignore some commands.
export HISTIGNORE="&:[ ]*:exit:ls:bg:fg:history:clear"

export GREP_OPTIONS='--color=auto'

# \033[36m = Begin cyan coloring (foreground).
# \033[m   = End coloring.
#export PS1='\w:\033[36m$(git branch 2> /dev/null | grep "^*" | colrm 1 2)\033[m $ '
export PS1='\w:$(git branch 2> /dev/null | grep "^*" | colrm 1 2)$ '

# For engineering bash scripts.
export WEBSERVER=/usr/local/www
export PYTHONPATH=$PYTHONPATH:/usr/local/bin

# Use vim as default editor instead of nano.
export EDITOR=vim

export NODE_PATH=/usr/local/lib/jsctags:${NODE_PATH}
export GOPATH=/usr/local/src/git/go
export PATH="$GOPATH/bin:$HOME/npm/bin:/usr/local/go/bin:$PATH"
export GITHOOKS=/usr/local/src/git/git/hooks

